# OpenClaw Job Search Agent - Environment Configuration
# Copy this file to .env and customize with your values

# ============================================
# Core OpenClaw Settings
# ============================================
NODE_ENV=production
PORT=18789
WORKSPACE_PATH=/root/workspace

# ============================================
# LLM Provider Configuration
# ============================================

# Anthropic (Claude) - Recommended for complex reasoning
# Get your API key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (GPT-4) - Alternative provider
# Get your API key: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# Email Configuration (for notifications)
# ============================================

# SMTP Settings - Use a dedicated email for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_notification_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=jobseeker-agent@yourdomain.com

# Notification recipient email (where job digests are sent)
NOTIFICATION_EMAIL=your_personal_email@example.com

# ============================================
# Security Settings
# ============================================

# Require approval for first 5 emails
EMAIL_APPROVAL_REQUIRED=true

# Maximum emails per day (safety limit)
MAX_EMAILS_PER_DAY=10

# Email sending mode (notification_only = cannot send on your behalf)
EMAIL_SEND_MODE=notification_only

# PHI (Protected Health Information) access disabled
PHI_ACCESS=disabled

# ============================================
# Job Search Parameters
# ============================================

# Target location for job search
TARGET_LOCATION=Central London

# Minimum acceptable salary
MIN_SALARY=Â£22000

# Maximum commute time in minutes
MAX_COMMUTE_MINUTES=60

# ============================================
# Optional: Messaging Integration
# ============================================

# Telegram Bot (optional)
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# WhatsApp Business API (optional)
WHATSAPP_TOKEN=

# ============================================
# Browser/Scraping Settings
# ============================================

HEADLESS=true
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36

# ============================================
# Logging
# ============================================

LOG_LEVEL=info
LOG_FILE=/root/workspace/openclaw.log

# ============================================
# Advanced Settings (usually don't need to change)
# ============================================

# Job search frequency (in hours)
SEARCH_INTERVAL_HOURS=6

# Minimum fit score to include in digest (0-100)
MIN_FIT_SCORE=80

# Maximum jobs per digest email
MAX_JOBS_PER_DIGEST=10